{
  "manifest_version": 2,

  "name": "CFNotify",
  "description": "Get Real-time notifications of the requests you make in your CloudForms appliance!",
  "version": "0.1.1",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "content_security_policy": "script-src 'self' https://js.pusher.com https://cdnjs.cloudflare.com; object-src 'self'",
  "permissions": [
    "notifications",
    "storage",
    "http://localhost/*",
    "http://still-everglades-1007.herokuapp.com/*",
    "http://fonts.googleapis.com/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  }
}